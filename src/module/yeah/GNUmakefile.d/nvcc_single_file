HEADERS = $(wildcard *.cuh)
SRC = $(wildcard *.cu)
#SRC = $(wildcard stream*.cu)
OBJ = $(SRC:.cu=.o)
EXE = $(SRC:.cu=)


#HEADPATH += -Ixx
#LIBPATH += -Lxx
#LINKFLAGS += -lx


CXX = nvcc -O2 -arch=compute_35

all: $(EXE)

% : %.cu
	$(CXX) $(HEADPATH) $(LIBPATH) $< -o $@ $(LINKFLAGS)
	
echo:
	@(echo $(HEADERS))
	@(echo $(SRC))
	@(echo $(OBJ))
	@(echo $(EXE))
clean:
#	$(RM) $(OBJ)
	$(RM) $(EXE)

